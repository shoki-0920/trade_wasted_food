<h1>新しい投稿</h1>

<%= form_with model: @post, local: true do |form| %>
  <% if @post.errors.any? %>
    <div class="errors">
      <h2>エラーが発生しました</h2>
      <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title, "タイトル" %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :description, "説明" %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :price, "価格" %>
    <%= form.number_field :price %>
  </div>

  <div class="field">
    <%= form.label :image, "画像" %>
    <%= form.file_field :image %>
  </div>

  <div class="actions">
    <%= form.submit "投稿する" %>
  </div>
<% end %>
